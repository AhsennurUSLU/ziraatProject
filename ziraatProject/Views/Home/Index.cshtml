<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-50 mx-auto" src="~/Assets/images/foto1.jpg" alt="First slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-50 mx-auto" src="~/Assets/images/foto2.jpg" alt="Second slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-50 mx-auto" src="~/Assets/images/foto3.jpg" alt="Third slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-50 mx-auto" src="~/Assets/images/foto4.jpg" alt="Third slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-50 mx-auto" src="~/Assets/images/foto5.jpeg" alt="Third slide">
        </div>
    </div>
    <a class="carousel-control-prev w-50 mx-auto" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon w-50 mx-auto" aria-hidden="true"></span>
        <span class="sr-only w-50 mx-auto">Previous</span>
    </a>
    <a class="carousel-control-next w-50 mx-auto" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon w-50 mx-auto" aria-hidden="true"></span>
        <span class="sr-only w-50 mx-auto">Next</span>
    </a>
</div>

